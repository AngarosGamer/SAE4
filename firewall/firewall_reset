#!/usr/sbin/nft -f


# Supprimer toutes les r√®gles du pare-feu
flush ruleset

# Accepter toutes les connexions entrantes et sortantes
table ip filter {
    chain input {
        type filter hook input priority 0; policy accept;
    }
    chain output{
        type filter hook output priority 0; policy accept;
    }
}

add table filtrage_nat
add chain filtrage_nat prerouting { type nat hook prerouting priority 0 ; }
add chain filtrage_nat postrouting { type nat hook postrouting priority 0 ; }
add rule filtrage_nat postrouting masquerade
